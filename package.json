{
  "name": "almezouara-ecommerce",
  "version": "1.0.0",
  "description": "A Made-in-China inspired mobile-first e-commerce platform for women's clothing",
  "main": "server.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prestart": "npm run build",
    "start": "node server.js",
    "railway:build": "npm run build",
    "railway:start": "node scripts/railway-start.js",
    "railway:deploy": "node scripts/railway-deploy.js",
    "test:build": "npm run build && node -e \"console.log('Build test passed')\"",
    "clean": "rm -rf dist node_modules/.vite",
    "check:deployment": "node scripts/check-deployment.js",
    "postinstall": "node scripts/check-deployment.js",
    "serve:full": "npm run build && npm start",
    "health:check": "curl -f http://localhost:${PORT:-3000}/health || exit 1"
  },
  "keywords": [
    "ecommerce",
    "women's clothing",
    "almezouara",
    "pwa",
    "spa"
  ],
  "author": "Almezouara",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "framer-motion": "^10.16.4",
    "i18next": "^23.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.2.2",
    "react-router-dom": "^6.16.0",
    "swiper": "^10.2.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.1",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9",
    "vite-plugin-pwa": "^0.16.5"
  }
}
