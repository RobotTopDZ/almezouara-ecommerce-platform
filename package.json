{
  "name": "almezouara-ecommerce",
  "version": "1.0.0",
  "description": "A Made-in-China inspired mobile-first e-commerce platform for women's clothing",
  "main": "server.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build --force",
    "preview": "vite preview",
    "prestart": "npm run build",
    "start": "node server.js",
    "railway:build": "npm run build",
    "railway:start": "node scripts/railway-start.js",
    "railway:deploy": "node scripts/railway-deploy.js",
    "test:build": "npm run build && node -e \"console.log('Build test passed')\"",
    "clean": "rm -rf dist node_modules/.vite",
    "check:deployment": "node scripts/check-deployment.js",
    "postinstall": "node scripts/check-deployment.js",
    "serve:full": "npm run build && npm start",
    "health:check": "curl -f http://localhost:${PORT:-3000}/health || exit 1",
    "db:check": "node scripts/check-database.js",
    "db:test": "NODE_ENV=development node scripts/check-database.js",
    "db:test-railway": "node scripts/test-railway-connection.js",
    "db:populate": "node scripts/populate-shipping-data.js",
    "test:all": "node scripts/test-all-functions.js",
    "test:production": "TEST_URL=https://almezouara-ecommerce-platform-production.up.railway.app node scripts/test-all-functions.js",
    "test:simple": "node scripts/test-api-simple.js",
    "migrate:shipping": "node scripts/migrate-real-shipping-data.js",
    "emergency:test": "node scripts/emergency-test.js",
    "railway:post-deploy": "node scripts/railway-post-deploy.js",
    "diagnose:mysql": "node scripts/diagnose-mysql-railway.js",
    "diagnose:frontend": "node scripts/diagnose-frontend-issues.js",
    "test:modules": "node scripts/test-all-modules.js",
    "force:deploy": "node scripts/force-deploy.js",
    "fix:promotions": "node scripts/fix-promotions-table.js",
    "populate:data": "node scripts/populate-initial-data.js"
  },
  "keywords": [
    "ecommerce",
    "women's clothing",
    "almezouara",
    "pwa",
    "spa"
  ],
  "author": "Almezouara",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "framer-motion": "^10.16.4",
    "i18next": "^23.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.2.2",
    "react-router-dom": "^6.16.0",
    "swiper": "^10.2.0",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.1",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9",
    "vite-plugin-pwa": "^0.16.5"
  }
}
